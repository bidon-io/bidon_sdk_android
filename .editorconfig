root = true

[*.{kt,kts}]
indent_style = space
indent_size = 4

# Disable specific rules using the new syntax
ktlint_standard_final-newline = disabled
ktlint_standard_no-wildcard-imports = disabled
ktlint_standard_max-line-length = disabled

# Disables trailing commas after the last element
ktlint_standard_trailing-comma-on-call-site = disabled
ktlint_standard_trailing-comma-on-declaration-site = disabled
ktlint_standard_argument-list-wrapping = disabled
ktlint_standard_wrapping = disabled
ktlint_standard_package-name = disabled # fix and revert rule
ktlint_standard_enum-entry-name-case = disabled # fix and revert rule
# ktlint_standard_indent = disabled
